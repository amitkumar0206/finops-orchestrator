# Backend Environment Variables
SECRET_KEY=your-super-secret-key-change-this-in-production
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=finops
POSTGRES_USER=finops
POSTGRES_PASSWORD=finops_password

# Valkey Configuration  
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_DB=0

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=finops-intelligence-platform-data-${AWS_ACCOUNT_ID}

# AWS Athena & CUR Configuration
AWS_CUR_DATABASE=cost_usage_db
AWS_CUR_TABLE=cur_data
CUR_S3_BUCKET=finops-intelligence-platform-data-${AWS_ACCOUNT_ID}
CUR_S3_PREFIX=cur/finops-cost-report/finops-cost-report
ATHENA_OUTPUT_LOCATION=s3://finops-intelligence-platform-data-${AWS_ACCOUNT_ID}/athena-results/
ATHENA_WORKGROUP=finops-workgroup

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
MAX_TOKENS=4000
TEMPERATURE=0.7
DEFAULT_LLM_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector Store
CHROMA_DB_PATH=./data/chroma
CHROMA_COLLECTION_NAME=cost_intelligence

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60